<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="16dp"
    tools:context="com.cse.calldoctor.SearchOption">

    <Button
        android:id="@+id/btnDoctorSearch"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/login_button"
        android:text="Doctor Search"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnHospitalSearch"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:background="@drawable/login_button"
        android:text="Hospital Search"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAmbulanceSearch"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_button"
        android:elevation="3dp"
        android:text="Ambulance Search"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDiagnosticSearch"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:background="@drawable/login_button"
        android:text="Diagnostic Center Search"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textStyle="bold" />

</LinearLayout>
